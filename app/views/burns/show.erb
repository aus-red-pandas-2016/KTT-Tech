<div class='burn-select'>
    <article id="<%= @burn.id%>">
      <h2><a href='/burns/<%= @burn.id %>'><%= @burn.title %></a></h2>
      <p>
        <span class='user'><%= @burn.user.username %></span>
        <span class='votes'><%= @burn.votes %></span>
        <span class='burn_description'><%= @burn.burn_description %></span>
        <span class='timestamp'><%= @burn.created_at %></span>
      </p>
    </article>

    <div class='burn-comment-list'>
      <% @burn.comments = @comments %>
      <% @comments.each do |comment| %>
        <form method="post" action='/burns/<%= @burn.id %>'></form>
        <%= erb(:'/comments/_comment', locals: {comment: comment}) %>
      <% end %>
    </div>

    <form id="comments_button" method="get" action="/comments-new">
      <input type="submit" value="Submit New Comment">
    </form>

    <%= erb(:_new_comment) %>


</div>
