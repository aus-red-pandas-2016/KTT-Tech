<article id="<%= @burn.id %>">
      <form method="post" action='/burns/<%= @burn.id %>/vote' class="inline">
        <button type="submit" name="submit_param" value="submit_value" class="fa fa-sort-desc vote-button upvote-button"></button>
      </form>
      <h2><a href='/burns/<%= @burn.id %>'><%= @burn.title %></a></h2>
      <p>
        <span class='votes'><%= @burn.votes %></span>
        <span class='user'><%= @burn.user %></span>
        <span class='timestamp'><%= @burn.created_at %></span>
        <span class='comment-count'><%= @burn.comment_count %></span>
        <a class="delete" href='/burns/<%= @burn.id %>'></a>
      </p>
    </article>
